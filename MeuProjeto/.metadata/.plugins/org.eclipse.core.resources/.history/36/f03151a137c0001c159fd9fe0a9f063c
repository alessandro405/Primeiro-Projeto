package impl;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import entidades.Usuario;
import fabrica.FabricaConexaoJDBC;

public class UsuarioRepositorioJDBC {
	
	
	public void autenticar(Usuario user) throws IOException, SQLException {
		try (Connection conexao = FabricaConexaoJDBC.criarConexao()){
			PreparedStatement comando = conexao.prepareStatement("SELECT * FROM usuarios WHERE email = ? AND senha ?");
			comando.setString(1, user.getEmail());
			comando.setString(2, user.getSenha());
			comando.execute();
		
			}
		}

	}
	

	
	
	
	
	
	
	
	
